<div class = "booking-container">

  <h1>Create a Booking for <%= link_to @party_animal.name, party_animal_path(@party_animal) %></h1>

  <%= simple_form_for [ @party_animal, @booking] do |f| %>
    <%= f.input :party_type, collection: PartyAnimal::PARTY_TYPES %>
    <%= f.input :address, placeholder: "Cihangir, 34433 Beyoğlu İstanbul" %>

    <%= f.input :start_time, as: :string, required: true, input_html: {class: "datepicker"} %>
    <%= f.input :end_time, as: :string, required: true, input_html: {class: "datepicker"} %>
    <%= f.submit "Get this party started!", class: "btn btn-outline-primary btn-lg" %>

  <% end %>

  <%#= link_to "Dashboard", dashboard_path %>
</div>
